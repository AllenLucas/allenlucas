<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/nav"
            app:startDestination="@id/splshFragment">

    <fragment android:id="@+id/splshFragment"
              android:name="com.allen.wanandroid.ui.fragment.SplashFragment"
              android:label="SplshFragment">
        <action
                android:id="@+id/action_splshFragment_to_homeFragment"
                app:destination="@id/homeFragment"/>
    </fragment>
    <fragment
            android:id="@+id/homeFragment"
            android:name="com.allen.wanandroid.ui.fragment.HomeFragment"
            android:label="HomeFragment"/>
    <fragment
            android:id="@+id/loginFragment"
            android:name="com.allen.wanandroid.ui.fragment.LoginFragment"
            android:label="LoginFragment">
        <action android:id="@+id/action_loginFragment_to_homeFragment" app:destination="@id/homeFragment"/>
    </fragment>
</navigation>